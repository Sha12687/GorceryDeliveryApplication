@model List<FoodDeliveryApplicationUI.Models.ProductViewModel>

@{
    ViewBag.Title = "Product List";
}

<div class="container">

    @foreach (var product in Model.GroupBy(p => p.CategoryId))
    {
        <h3>@product.First().CategoryName</h3>

        <div class="row">
            @foreach (var item in product)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="~/Images/@item.ImageFileName" class="card-img-top" alt="@item.Name product not found" style="max-height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text price-text">@item.Price kg</p>
                                <button class="btn btn-primary" onclick="addToCart(@item.ProductId)">
                                    <span class="bi bi-cart-fill cart-icon"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function addToCart(productId) {
            // AJAX request to call the AddToCart action in CustomerController
            $.ajax({
                url: '@Url.Action("AddToCart", "Customer")', // Assuming your action is named AddToCart and is in the CustomerController
                type: 'POST',
                data: { productId: productId },
                error: function () {
                    alert("Error adding product to cart.");
                }
            });
        }
    </script>
}
